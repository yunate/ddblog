---
import '../styles/global.css';
import TextLink from './TextLink.astro';
const { text, url, logo} = Astro.props;
---

<div class="avatar">
  <TextLink text={text} url={url} >
    <img src={logo} alt=" " width="40" height="40" />
  </TextLink>
</div>

<style>
  .avatar {
    height: 100%;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  img {
    margin-right: 12px;
    margin-top: 4px;
    border-radius: 50%;
    width: 32px;
    height: 32px;
  }
</style>